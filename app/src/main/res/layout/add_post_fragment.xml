<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background = "@color/color1"
	tools:context = ".view.fragments.AddPostFragment">

	<androidx.cardview.widget.CardView android:id = "@+id/add_post_image_card"
									   android:layout_width = "0dp"
									   android:layout_height = "wrap_content"
									   android:layout_marginTop = "50dp"
									   app:cardCornerRadius = "36dp"
									   app:layout_constraintEnd_toEndOf = "parent"
									   app:layout_constraintStart_toStartOf = "parent"
									   app:layout_constraintTop_toTopOf = "parent">

		<ImageView android:layout_width = "match_parent"
				   android:layout_height = "wrap_content"
				   android:layout_marginBottom = "36dp"
				   android:adjustViewBounds = "true"
				   android:scaleType = "fitXY"
				   android:src = "@drawable/uni_140"/>
	</androidx.cardview.widget.CardView>

	<FrameLayout android:layout_width = "wrap_content"
				 android:layout_height = "wrap_content"
				 android:background = "@drawable/corner_radius_bottom"
				 android:backgroundTint = "@color/color1"
				 android:elevation = "10dp"
				 app:layout_constraintEnd_toEndOf = "parent"
				 app:layout_constraintStart_toStartOf = "parent"
				 app:layout_constraintTop_toTopOf = "@id/add_post_image_card">
<TextView android:layout_width = "wrap_content"
		  android:layout_height = "wrap_content"
		  style="@style/LabelBold"
		  android:textColor="@color/color4"
		  android:paddingHorizontal="20dp"
		  android:paddingVertical="10dp"
		  android:text="@string/nuovo_spot"/>
	</FrameLayout>

	<androidx.cardview.widget.CardView android:layout_width = "0dp"
									   android:layout_height = "0dp"
									   android:layout_marginTop = "-72dp"
									   app:cardCornerRadius = "36dp"
									   app:layout_constraintBottom_toBottomOf = "parent"
									   app:layout_constraintEnd_toEndOf = "parent"
									   app:layout_constraintStart_toStartOf = "parent"
									   app:layout_constraintTop_toBottomOf = "@id/add_post_image_card">
		<LinearLayout android:layout_width = "match_parent"
					  android:layout_height = "match_parent"
					  android:orientation="vertical"
			android:padding="30dp">
			<TextView android:layout_width = "wrap_content"
					  android:layout_height = "wrap_content"
					  style="@style/LabelBold"
					  android:textSize="22sp"
					  android:textColor="@color/color2"
					  android:text="Plesso"/>
			<Spinner style = "@style/LabelBold"
					 android:layout_width = "match_parent"
					 android:layout_height = "wrap_content"

					 android:tooltipText = "Plesso"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

		<LinearLayout android:layout_width = "match_parent"
					  android:layout_height = "80dp"
					  app:layout_constraintBottom_toBottomOf="parent"
					  app:layout_constraintStart_toStartOf="parent"
					  android:background="@color/color3"
			android:elevation="10dp">

		</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>