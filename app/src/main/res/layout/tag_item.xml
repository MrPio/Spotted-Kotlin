<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="model" type="it.univpm.spottedkotlin.model.Tag"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded_red_tag"
        android:orientation="horizontal">

        <TextView
            style="@style/LabelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/material_design_icons"
            android:text="@{model.icon}"
            android:textColor="@color/color4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/percentage_label"
            style="@style/LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@{model.name}"
            android:textAlignment="center"
            android:textColor="@color/color4" />
    </LinearLayout>
</layout>