<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name = "model"
			type = "it.univpm.spottedkotlin.model.User"/>
		<variable name = "view"
				  type = "it.univpm.spottedkotlin.view.holders.UserCardViewHolder"/>
	</data>

	<RelativeLayout android:layout_width = "match_parent"
					android:layout_height = "wrap_content">
	<androidx.constraintlayout.widget.ConstraintLayout android:layout_width = "match_parent"
													   android:layout_height = "wrap_content">

		<LinearLayout android:layout_width = "match_parent"
					  android:layout_height = "wrap_content"
					  android:paddingVertical = "10dp"
					  android:paddingHorizontal="20dp"
					  android:orientation = "horizontal">

			<!--AvatarImage-->
			<androidx.cardview.widget.CardView
				android:layout_width = "46dp"
				android:layout_height = "46dp"
				android:layout_marginEnd = "20dp"
				app:cardCornerRadius = "999dp">

				<ImageView
					imageUrl = "@{model.avatar}"
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"/>
			</androidx.cardview.widget.CardView>

			<!--Name, Surname and Nickname-->
			<LinearLayout android:layout_width = "0dp"
						  android:layout_height = "wrap_content"
						  android:layout_weight = "1"
						  android:orientation = "vertical">
				<TextView style = "@style/LabelBold"
						  android:layout_width = "match_parent"
						  android:layout_height = "wrap_content"
						  android:text = '@{model.name + " " + model.surname }'/>
				<TextView style = "@style/LabelRegular"
						  android:layout_width = "match_parent"
						  android:layout_height = "wrap_content"
						  android:layout_marginTop = "4dp"
						  android:text = "@{model.instagramNickname}"
						  android:textColor = "@color/hint"/>
			</LinearLayout>
		</LinearLayout>

		<!--HighlightView-->
		<include layout = "@layout/highlight_view"
				 app:foreground = "@{@drawable/ripple_foreground}"
				 android:paddingVertical = "10dp"
				 app:onClickListener = "@{()->view.onClick(model)}"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

	</RelativeLayout>
</layout>