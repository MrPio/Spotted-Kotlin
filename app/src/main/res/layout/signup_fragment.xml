<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<import type="it.univpm.spottedkotlin.enums.RemoteImages" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.cardview.widget.CardView
			android:id="@+id/register_card"
			android:layout_width="350dp"
			android:layout_height="600dp"
			app:cardBackgroundColor="#FFFFFF"
			app:cardCornerRadius="36dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="596dp">

				<androidx.cardview.widget.CardView
					android:layout_width="300dp"
					android:layout_height="550dp"
					app:cardCornerRadius="0dp"
					app:cardElevation="0dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent">

					<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/register_text"
							android:layout_width="match_parent"
							android:layout_height="40dp"
							android:fontFamily="@font/lato_bold"
							android:text="@string/sign_in"
							android:textAlignment="center"
							android:textColor="@color/color1"
							android:textSize="28sp"
							android:textStyle="bold"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent" />

						<TextView
							android:id="@+id/email"
							android:layout_width="match_parent"
							android:layout_height="20dp"
							android:layout_marginTop="8dp"
							android:fontFamily="@font/lato_bold"
							android:text="@string/email"
							android:textColor="@color/color1"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/register_text" />

						<EditText
							android:id="@+id/RegisterEmailAddress"
							android:layout_width="match_parent"
							android:layout_height="50dp"
							android:ems="10"
							android:inputType="textEmailAddress"
							android:text="admin@admin.com"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/email" />

						<TextView
							android:id="@+id/password"
							android:layout_width="match_parent"
							android:layout_height="20dp"
							android:fontFamily="@font/lato_bold"
							android:text="@string/password"
							android:textColor="@color/color1"
							app:layout_constraintBottom_toTopOf="@+id/RegisterPassword"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/RegisterEmailAddress"
							app:layout_constraintVertical_bias="1.0" />

						<EditText
							android:id="@+id/RegisterPassword"
							android:layout_width="match_parent"
							android:layout_height="50dp"
							android:layout_marginTop="36dp"
							android:ems="10"
							android:inputType="textPassword"
							android:text=""
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/RegisterEmailAddress" />

						<Button
							android:id="@+id/register_button"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="@string/registrati"
							app:cornerRadius="60dp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/ControlPassword" />

						<TextView
							android:id="@+id/or_text"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:text="@string/oppure"
							android:textAlignment="center"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/register_button" />

						<TextView
							android:id="@+id/already_registred"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:text="@string/already_registered"
							android:textAlignment="center"
							android:textColor="@color/color1"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/button3" />

						<TextView
							android:id="@+id/do_login_text"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:text="@string/do_login"
							android:textAlignment="center"
							android:textColor="@color/color1"
							android:textStyle="bold"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/already_registred"
							app:layout_constraintVertical_bias="1.0" />

						<Button
							android:id="@+id/button3"
							android:layout_width="50dp"
							android:layout_height="60dp"
							android:layout_marginTop="8dp"
							android:backgroundTint="#FFFFFF"
							app:cornerRadius="120dp"
							app:icon="@drawable/google"
							app:iconGravity="textStart"
							app:iconPadding="0dp"
							app:iconSize="35dp"
							app:iconTintMode="multiply"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/or_text" />

						<TextView
							android:id="@+id/repeat_password"
							android:layout_width="300dp"
							android:layout_height="20dp"
							android:layout_marginTop="20dp"
							android:fontFamily="@font/lato_bold"
							android:text="@string/repeat_password"
							android:textColor="@color/color1"
							app:layout_constraintTop_toBottomOf="@+id/RegisterPassword"
							tools:layout_editor_absoluteX="0dp" />

						<EditText
							android:id="@+id/ControlPassword"
							android:layout_width="0dp"
							android:layout_height="50dp"
							android:ems="10"
							android:inputType="textPassword"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintHorizontal_bias="0.0"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/repeat_password" />

						<Button
							android:id="@+id/strengthButton"
							android:layout_width="0dp"
							android:layout_height="15dp"
							android:clickable="false"
							android:text="Button"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/RegisterPassword" />

					</androidx.constraintlayout.widget.ConstraintLayout>

				</androidx.cardview.widget.CardView>
			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.cardview.widget.CardView>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
